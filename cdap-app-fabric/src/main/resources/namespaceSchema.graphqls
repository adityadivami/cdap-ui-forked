type NamespaceQuery {
  namespaces: [NamespaceMeta]!
  namespace(name: String!): NamespaceMeta!
}

type NamespaceMeta {
  name: String!
  description: String!
  generation: Long!
  config: NamespaceConfig!
}

type NamespaceConfig {
  schedulerQueueName: String
  rootDirectory: String
  hbaseNamespace: String
  hiveDatabase: String
  principal: String
  groupName: String
  keytabURI: String
  exploreAsPrincipal: Boolean
}


