type ApplicationRecord {
  type: String!
  name: String!
  version: String!
  description: String!
  artifact: ArtifactSummary!
  ownerPrincipal: String
  # Field added for composition
  applicationDetail: ApplicationDetail!
}

type ApplicationDetail {
  name: String!
  appVersion: String!
  description: String!
  configuration: String!
  #List<DatasetDetail> datasets;
  programs(type: String): [ProgramRecord]!
  #List<PluginDetail> plugins;
  artifact: ArtifactSummary!
  ownerPrincipal: String
}

# TODO add in separate file
interface ProgramRecord {
  type: String!
  app: String!
  name: String!
  description: String!
}

# TODO add in separate file
type Workflow implements ProgramRecord {
  type: String!
  app: String!
  name: String!
  description: String!
  # Field added for composition
  startTimes: [ScheduledRuntime]!
  runs: [RunRecord]!
}

# TODO add in separate file
type MapReduce implements ProgramRecord {
  type: String!
  app: String!
  name: String!
  description: String!
}

# TODO add in separate file
type ScheduledRuntime {
  id: String!
  time: String!
}

# TODO add in separate file
type RunRecord {
  pid: String!
  startTs: String!
  runTs: String!
  stopTs: String
  suspendTs: String
  resumeTs: String
  status: String!
  # Map<String, String> properties:
  # ProgramRunCluster cluster:
  profileId: String
}